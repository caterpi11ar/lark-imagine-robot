# 飞书应用配置
LARK_APP_ID=cli_xxxxx
LARK_APP_SECRET=xxxxx

# 连接模式: "websocket" (推荐) 或 "webhook"
# websocket 模式无需公网域名，无需配置 VERIFICATION_TOKEN 和 ENCRYPT_KEY
CONNECTION_MODE=websocket

# 以下仅 webhook 模式需要
LARK_VERIFICATION_TOKEN=xxxxx
LARK_ENCRYPT_KEY=

# 服务配置 (webhook 模式使用的端口)
PORT=3000

# 图片生成默认配置 (可选)
DEFAULT_GENERATION_BASE_URL=https://api.openai.com/v1

# Gemini 配置 (可选)
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_MODEL=gemini-3-pro-image-preview

# 自定义机器人 Webhook URL (可选，生成完成后推送结果到群聊)
LARK_WEBHOOK_URL=

# 生成队列配置
QUEUE_MAX_CONCURRENCY=3
QUEUE_MAX_LENGTH=20

# API Key 缓存配置
CACHE_TTL_MINUTES=1440
CACHE_MAX_SIZE=500
CACHE_ENCRYPT_SECRET=your-secret-key-at-least-8-chars
